{
  "manifest_version": 3,
  "name": "Simple Snake Game",
  "default_locale": "en",
  "short_name": "SnakeGame",  
  "version": "1.2",
  "action": {
     "default_icon": "icon.png",
     "default_title": "Simple Snake Game",
     "default_popup": "main.html"
  },
  "offline_enabled": true,
  "author": "justyy<dr.zhihua.lai@gmail.com>",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },  
  "description": "Classic Snake Game in Your Browser",  
  "web_accessible_resources":  [{
  		"resources": ["js/*", "images/*", "bs/*"],
      "extension_ids": ["fbbeckekbefhhmabpfjgpjobkmnfjbec"]
  }],  
  "permissions": [
     "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  } 
